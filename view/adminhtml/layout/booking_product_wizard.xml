<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <container name="root">
        <block class="Ced\Booking\Block\Adminhtml\Product\Edit\Tab\Variations\Config\Matrix" template="Ced_Booking::catalog/product/edit/super/wizard-ajax.phtml" as="wizard">
            <arguments>
                <argument name="config" xsi:type="array">
                    <item name="collapsible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true" />
                    <item name="sortOrder" xsi:type="string">3333</item>
                    <item name="canShow" xsi:type="boolean">true</item>
                    <item name="componentType" xsi:type="string">fieldset</item>
                    <item name="form" xsi:type="string">product_form.product_form</item>
                    <item name="modal" xsi:type="string">bookingModal</item>
                    <item name="nameStepWizard" xsi:type="string">variation-steps-wizard</item>
                    <item name="dataScope" xsi:type="string">productFormBooking</item>
                </argument>
            </arguments>
            <block class="Magento\Ui\Block\Component\StepsWizard" name="variation-steps-wizard">
                <arguments>
                    <argument name="config" xsi:type="array">
                        <item name="form" xsi:type="string">product_form.product_form</item>
                        <item name="modal" xsi:type="string">bookingModal</item>
                        <item name="dataScope" xsi:type="string">productFormBooking</item>
                    </argument>
                </arguments>
                <block class="Ced\Booking\Block\Adminhtml\Product\Steps\GeneralForm" name="step1" template="Ced_Booking::catalog/product/edit/steps/general_form.phtml">
                    <arguments>
                        <argument name="config" xsi:type="array">
                            <item name="form" xsi:type="string">product_form.product_form</item>
                            <item name="modal" xsi:type="string">bookingModal</item>
                            <item name="dataScope" xsi:type="string">productFormBooking</item>
                        </argument>
                    </arguments>
                        <block class="Ced\Booking\Block\Adminhtml\Attribute\Edit\Tabs"
                                name="ced_booking_edit_tabs">
                        </block>
                </block>
                <block class="Ced\Booking\Block\Adminhtml\Product\Steps\RoomFacilities" name="step2" template="Ced_Booking::catalog/product/edit/steps/room_facilities.phtml">
                    <argument name="config" xsi:type="array">
                            <item name="form" xsi:type="string">product_form.product_form</item>
                            <item name="modal" xsi:type="string">bookingModal</item>
                            <item name="dataScope" xsi:type="string">productFormBooking</item>
                    </argument>
                    <block  class="Ced\Booking\Block\Adminhtml\AddRooms\Facility\Edit\Tabs"
                            name="ced_booking_add_room_facilities_tabs">
                    </block>
                </block>
                <block class="Ced\Booking\Block\Adminhtml\Product\Steps\Images" name="step4" template="Ced_Booking::catalog/product/edit/steps/images.phtml">
                    <arguments>
                        <argument name="config" xsi:type="array">
                            <item name="form" xsi:type="string">product_form.product_form</item>
                            <item name="modal" xsi:type="string">bookingModal</item>
                            <item name="dataScope" xsi:type="string">productFormBooking</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </block>
    </container>
</layout>
